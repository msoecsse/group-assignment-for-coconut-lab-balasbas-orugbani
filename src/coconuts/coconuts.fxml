<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" onKeyPressed="#onKeyPressed" vgap="10"
          xmlns="http://javafx.com/javafx/8.0.141" fx:controller="coconuts.GameController">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <VBox fx:id="skyAndSand" prefHeight="650.0" prefWidth="600.0">
        <!-- Scoreboard Panel -->
        <Pane id="scoreboardPane" fx:id="scoreboardPane" prefHeight="50.0" prefWidth="600.0"
              style="-fx-background-color: #000000; -fx-border-color: #34495e; -fx-border-width: 2;">
            <HBox spacing="40" alignment="CENTER" layoutX="50.0" layoutY="10.0" prefWidth="500.0">
                <VBox alignment="CENTER" spacing="2">
                    <Label text="Coconuts Hit" textFill="white" style="-fx-font-weight: bold;">
                        <font>
                            <Font size="12.0"/>
                        </font>
                    </Label>
                    <Label fx:id="coconutsHitLabel" text="0" textFill="#2ecc71"
                           style="-fx-font-weight: bold;">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Label>
                </VBox>
                <VBox alignment="CENTER" spacing="2">
                    <Label text="Coconuts Missed" textFill="white" style="-fx-font-weight: bold;">
                        <font>
                            <Font size="12.0"/>
                        </font>
                    </Label>
                    <Label fx:id="coconutsMissedLabel" text="0" textFill="#e74c3c"
                           style="-fx-font-weight: bold;">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Label>
                </VBox>
                <VBox alignment="CENTER" spacing="2">
                    <Label text="Accuracy" textFill="white" style="-fx-font-weight: bold;">
                        <font>
                            <Font size="12.0"/>
                        </font>
                    </Label>
                    <Label fx:id="accuracyLabel" text="0.0%" textFill="#f39c12"
                           style="-fx-font-weight: bold;">
                        <font>
                            <Font size="16.0"/>
                        </font>
                    </Label>
                </VBox>
            </HBox>
        </Pane>

        <Pane id="theGame" fx:id="gamePane" prefHeight="550.0" prefWidth="600.0"
              style="-fx-background-color: linear-gradient(to bottom right, derive(skyblue, 20%), derive(skyblue, -40%));">
            <Label layoutX="50.0" layoutY="520.0" scaleZ="2.0"
                   text="Press arrow keys to move, UP to shoot, SPACE to start/pause"
                   textFill="darkred" translateZ="1.0">
                <font>
                    <Font name="Poor Richard" size="14.0"/>
                </font>
            </Label>
        </Pane>
        <Pane id="theBeach" fx:id="theBeach" prefHeight="50.0" prefWidth="600.0"
              style="-fx-background-color: linear-gradient(to bottom right, derive(tan, 30%), derive(tan, -50%));">
        </Pane>
    </VBox>
</GridPane>
